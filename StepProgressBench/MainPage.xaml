<Page
    x:Class="StepProgressBench.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:StepProgressBench"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:StepProgressBench.Controls"
    mc:Ignorable="d">

    <Grid
        Background="White"
        Padding="100">
        <controls:StepProgressBar
            HorizontalAlignment="Center"
            ActiveStepStroke="Red"
            CompletedStepFill="Red"
            NewStepStroke="Gray"
            StepSpacing="80"
            TextSize="12"
            FontFamily="Open Sans"
            NodeWidth="25"
            LineHeight="2"
            Steps="{x:Bind Steps, Mode=TwoWay}"/>
    </Grid>



</Page>
